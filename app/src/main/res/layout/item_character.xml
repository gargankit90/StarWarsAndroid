<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/characterImage"
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />


        <TextView
            android:id="@+id/characterNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/characterImage"
            android:layout_toRightOf="@+id/characterImage"
            android:text="@string/characterNameLabel" />

        <TextView
            android:id="@+id/characterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/characterNameLabel"
            android:layout_toRightOf="@+id/characterNameLabel"
            tools:text="Luke" />


        <TextView
            android:id="@+id/characterHeightLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/characterNameLabel"
            android:layout_toEndOf="@+id/characterImage"
            android:layout_toRightOf="@+id/characterImage"
            android:text="@string/characterHeightLabel" />

        <TextView
            android:id="@+id/characterHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/characterNameLabel"
            android:layout_toEndOf="@+id/characterHeightLabel"
            android:layout_toRightOf="@+id/characterHeightLabel"
            tools:text="35" />

        <TextView
            android:id="@+id/characterBirthYearLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/characterHeightLabel"
            android:layout_toEndOf="@+id/characterImage"
            android:layout_toRightOf="@+id/characterImage"
            android:text="@string/characterBirthYearLabel" />

        <TextView
            android:id="@+id/characterBirthYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/characterHeightLabel"
            android:layout_toEndOf="@+id/characterBirthYearLabel"
            android:layout_toRightOf="@+id/characterBirthYearLabel"
            tools:text="1989" />
    </RelativeLayout>
</android.support.v7.widget.CardView>